<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:nestedScrollingEnabled="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btnSpotifyStreamer"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="appInvoked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btnScoresApp"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/btnSpotifyStreamer"
        android:layout_alignLeft="@+id/btnSpotifyStreamer"
        android:layout_alignStart="@+id/btnSpotifyStreamer"
        android:layout_marginTop="20dp"
        android:onClick="appInvoked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btnLibraryApp"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/btnScoresApp"
        android:layout_alignLeft="@+id/btnScoresApp"
        android:layout_alignStart="@+id/btnScoresApp"
        android:layout_marginTop="20dp"
        android:onClick="appInvoked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBuildItBiggerApp"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/btnLibraryApp"
        android:layout_alignLeft="@+id/btnLibraryApp"
        android:layout_alignStart="@+id/btnLibraryApp"
        android:layout_marginTop="20dp"
        android:onClick="appInvoked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btnXyzReaderApp"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/btnBuildItBiggerApp"
        android:layout_alignLeft="@+id/btnBuildItBiggerApp"
        android:layout_alignStart="@+id/btnBuildItBiggerApp"
        android:layout_marginTop="20dp"
        android:onClick="appInvoked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btnMyCapstoneApp"
        android:background="#FF0000"
        android:minWidth="200dp"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/btnXyzReaderApp"
        android:layout_alignLeft="@+id/btnXyzReaderApp"
        android:layout_alignStart="@+id/btnXyzReaderApp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:onClick="appInvoked"/>
</RelativeLayout>
